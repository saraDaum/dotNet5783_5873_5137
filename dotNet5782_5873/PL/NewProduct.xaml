<Window x:Class="PL.NewProduct"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="NewProduct" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Label Name="NewLabel" Content="name:" Margin="46,24,46,357" Background="Bisque" HorizontalContentAlignment="Right"/>

        <TextBox x:Name="Nametxb" TextChanged="TextBox_TextChanged" Margin="46,24,46,357" Background="Gray" Grid.Column="1"/>

        <Label Name="Newbel" Content="Price" Margin="46,126,46,258" Background="Bisque" HorizontalContentAlignment="Right"/>

        <TextBox TextChanged="TextBox_TextAdd" x:Name="Pricetxb" Margin="46,126,46,258" Background="Gray" Grid.Column="1"/>
        <Label x:Name="Newbel_Copy" Content="Category" Margin="46,217,46,166" Background="Bisque" HorizontalContentAlignment="Right"/>
        <TextBox x:Name="CategoryTxb" TextChanged="TextBox_TextChanged" Margin="46,217,46,166" Background="Gray" Grid.Column="1"/>
        <Label x:Name="Newbel_Copy1" Content="Amount In Stock:" Margin="46,316,46,68" Background="Bisque" HorizontalContentAlignment="Right"/>
        
        <TextBox x:Name="Amounttxb" TextChanged="TextBox_TextChanged" Margin="46,316,46,68" Background="Gray" Grid.Column="1"/>
        <Button x:Name="ConfirmBtn" Grid.Column="1" Content="Confirm" HorizontalAlignment="Left" Margin="139,404,0,0" VerticalAlignment="Top" Click="ConfirmBtn_Click"/>
    </Grid>
</Window>
