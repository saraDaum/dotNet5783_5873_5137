<Window x:Class="PL.Message"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="Message" Height="450" Width="800">
    <Grid Cursor="Wait">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="33*"/>
            <ColumnDefinition Width="367*"/>
        </Grid.ColumnDefinitions>
        <Label x:Name="Text" Content="" HorizontalAlignment="Left"  Height="372" Margin="-46,-32,0,0" VerticalAlignment="Top" Width="846" Background="#82C5341D" RenderTransformOrigin="0.5,0.5" Grid.ColumnSpan="2">
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.064"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>
        <Button Content="Button" HorizontalAlignment="Left" Height="56" Margin="32,359,0,0" VerticalAlignment="Top" Width="739" Click="Button_Click" Background="#FFB7B9C1" Grid.ColumnSpan="2"/>

    </Grid>
</Window>
