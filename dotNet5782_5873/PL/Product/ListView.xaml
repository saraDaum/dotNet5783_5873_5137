<Window x:Class="PL.Product.ListView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.Product"
        mc:Ignorable="d"
        Title="ListView" Height="450" Width="800">
    <Grid>
        <Grid Background="#FFE1E6EC" >
            <Grid.RowDefinitions>
                <RowDefinition Height="40*"/>
                <RowDefinition Height="500*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.ColumnSpan="3"/>
            <Grid Name="UpGrid" Height="auto" Width="auto" Background="#FF162B5D">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
            </Grid>
            <ComboBox Name="Selector" SelectionChanged="Selector_SelectionChanged" Margin="0,108,0,262" Grid.Row="1" Background="#FFE0DEDE"  >
                <Label Content="Label" Grid.Column="0"/>
            </ComboBox>
            <ListView Grid.Row="1" x:Name="ProductListview" d:ItemsSource="{d:SampleData ItemCount=5}" Width="900" Height="500" SelectionChanged="ListView_SelectionChanged">
                <ListView.View>
                    <GridView>
                        <GridViewColumn/>
                    </GridView>
                </ListView.View>
            </ListView>
        </Grid>

    </Grid>
</Window>
