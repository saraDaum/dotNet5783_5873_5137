<Window x:Class="PL.NewCart"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="NewCart" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="219*"/>
            <RowDefinition Height="153*"/>
            <RowDefinition Height="17*"/>
            <RowDefinition Height="45*"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="NameTxt"  TextWrapping="Wrap"   Margin="210,51,466,20" RenderTransformOrigin="0.462,0.326" Background="Bisque"/>
        <TextBox x:Name="EmailTxt"  TextWrapping="Wrap"    Margin="210,113,466,57" RenderTransformOrigin="0.462,0.326" Background="Bisque" Grid.RowSpan="2"/>
        <Label Content="adress" Margin="627,10,10,5" Grid.RowSpan="2"/>
        <TextBox x:Name="AddressTxt"  TextWrapping="Wrap"   Margin="210,175,264,7" RenderTransformOrigin="0.462,0.326" Background="Bisque" TextChanged="AddressTxt_TextChanged" Grid.RowSpan="2"/>
        <Button Content="Button" Click="Button_Click" Margin="320,9,374,11" Grid.Row="2" Grid.RowSpan="2"/>

    </Grid>
</Window>
